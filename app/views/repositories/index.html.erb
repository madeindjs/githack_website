<p id="notice"><%= notice %></p>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><%= @title %></li>
  </ol>
</nav>

<h1><%= @title %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Framework</th>
      <th>Leak</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.url %></td>
        <th><%= repository.framework %></th>
        <td>
          <%= repository.leaks.where(status: :unchecked).count %>
          to check /
          <%= repository.leaks.where(status: :unsafe).count %>
          unsafe
        </td>
        <td>
          <%= link_to 'Show', repository, class: 'btn btn-default' %>
          <%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Repository', new_repository_path, class: 'btn btn-primary' %>